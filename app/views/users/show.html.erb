<%= render 'shared/content_title', title: "Profile: #{@user.username}" %>

<div class="well">
	<dl class="dl-horizontal">
		<dt>Username:</dt>
		<dd><%= @user.username %></dd>
	</dl>
</div>
<%= %>

<h5><%= @user.username %>'s Activities </h5>

<ul class='nav nav-tabs'>
	<ui class='<%= 'active' if params[:tab].nil? %>'>
		<%= link_to "Posts (#{@user.posts.size})", user_path(@user) %>
	</ui>
	<ui class='<%= 'active' if params[:tab] == 'comments' %>'>
		<%= link_to "Comments (#{@user.comments.size})", user_path(@user, tab: 'comments') %>
	</ui>
</ul>


<% if params[:tab].nil? %>
	<% @user.posts.each do |post| %>
		<%= render 'posts/post', post: post %>
	<% end %>
<% else %>

	<% @user.comments.each do |comment| %>
		<%= render 'comments/comment', comment: comment, show_post: true %>
		<div class="well span8">
			<em><%= comment.body %></em>
			<br>
			<span class="quiet">by </span><%= comment.user ? comment.user.username : 'Empty Username' %> 
			<small>at <%= format_date(comment.created_at) %></small>
		</div>
	<% end %>
<% end %>


	