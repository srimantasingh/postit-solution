
<div class="well span8">
	<em><%= comment.body %></em>
	<% if show_post %>
		on <%= link_to comment.post.title, post_path(comment.post) %>
	<% end %>
	<br>
	<span class="quiet">by </span><%= comment.user ? comment.user.username : 'Empty Username' %> 
	<small>at <%= format_date(comment.created_at) %></small>
</div>
